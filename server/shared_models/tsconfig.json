{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2017", "ESNext"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "files": [
    "package.json",
  ],
  "include": [
    "**/*.ts",
    "**/*.png"
  ]
}